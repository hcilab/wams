{
  "extends": ["standard", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSameLine": false,
        "bracketSpacing": true,
        "endOfLine": "lf",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    ]
  },
  "plugins": ["prettier"],
  "ignorePatterns": ["dist", "docs"]
}
